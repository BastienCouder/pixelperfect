---
export interface Props {
  type?: 'text' | 'email' | 'password' | 'number' | 'tel' | 'url' | 'search' | 'date' | 'datetime-local' | 'month' | 'week' | 'time' | 'color' | 'checkbox' | 'radio' | 'file' | 'range' | 'hidden' | 'submit' | 'reset' | 'button';
  label?: string;
  placeholder?: string;
  id: string;
  name: string;
  required?: boolean;
  class?: string;
  error?: string;
}

const {
  type = 'text',
  label,
  placeholder,
  id,
  name,
  required = false,
  class: className = '',
  error,
  ...rest
} = Astro.props;

const inputClasses = [
  'w-full px-3 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-teal-700',
  error ? 'border-red-500' : 'border-gray-300',
  className,
];
---

<div class="w-full">
  {label && (
    <label for={id} class="block text-sm font-medium text-gray-700 mb-1">
      {label}
      {required && <span class="text-red-500">*</span>}
    </label>
  )}
  <input
    type={type}
    id={id}
    name={name}
    placeholder={placeholder}
    required={required}
    class:list={inputClasses}
    {...rest}
  />
  {error && <p class="mt-1 text-sm text-red-500">{error}</p>}
</div>