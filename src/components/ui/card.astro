---
export interface Props {
  variant?: 'default' | 'elevated' | 'bordered' | 'colored';
  padding?: 'none' | 'sm' | 'md' | 'lg';
  class?: string;
  bgColor?: string;
}

const {
  variant = 'default',
  padding = 'md',
  class: className = '',
  bgColor,
  ...rest
} = Astro.props;

const variants = {
  default: 'bg-white shadow-sm',
  elevated: 'bg-white shadow-lg',
  bordered: 'bg-white border border-gray-200',
  colored: bgColor || 'bg-teal-800 text-white',
};

const paddings = {
  none: 'p-0',
  sm: 'p-4',
  md: 'p-6',
  lg: 'p-8',
};

const classes = [
  'rounded-xl',
  variants[variant],
  paddings[padding],
  className,
];
---

<div class:list={classes} {...rest}>
  <slot />
</div>